<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ClothesSuggester" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_title</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:background">@color/dark_background</item>
    </style>


    <style name="Text" parent="">
        <item name="android:fontFamily">@font/itim_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.Title.large" parent="Text">
        <item name="android:textColor">@color/dark_title</item>
        <item name="android:textSize">@dimen/title_large</item>
    </style>

    <style name="Text.Title.medium" parent="Text">
        <item name="android:textColor">@color/dark_subtitle</item>
        <item name="android:textSize">@dimen/title_medium</item>
    </style>

    <style name="Text.body.large" parent="Text">
        <item name="android:textColor">@color/dark_subtitle</item>
        <item name="android:textSize">@dimen/body_large</item>
    </style>

    <style name="Text.body.medium" parent="Text">
        <item name="android:textColor">@color/dark_subtitle</item>
        <item name="android:textSize">@dimen/body_medium</item>
        <item name="android:drawableTint">@color/dark_subtitle</item>
    </style>

    <style name="Text.body.medium.rating" parent="Text">
        <item name="android:textColor">@color/dark_title</item>
        <item name="android:textSize">@dimen/body_medium</item>
    </style>

    <style name="divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_night</item>
    </style>
</resources>